{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "typeRoots": ["./types", "./node_modules/@types"],
      "esModuleInterop": true,
      "outDir": "./dist",
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*", "types/express"],
    "exclude": ["node_modules"]
  }
  